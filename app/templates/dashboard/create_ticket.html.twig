{% extends 'base.html.twig' %}

{% block title %}Créer un nouveau ticket{% endblock %}

{% block body %}
    <div class="flex flex-row">
        {% include 'dashboard/components/sidebar.html.twig' %}

        <div class="flex-grow ml-64">
            {% include 'dashboard/components/topbar.html.twig' %}

            <div class="p-8 bg-gray-100 min-h-screen">
                <h1 class="text-4xl font-bold mb-8 text-gray-800">Créer un nouveau ticket</h1>

                {% include 'dashboard/components/messages.html.twig' %}

                <div class="bg-white shadow-lg rounded-lg p-8 max-w-2xl mx-auto">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                    <div>
                        {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.subject, {
                            'attr': {
                                'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 p-3',
                                'placeholder': 'Entrez le sujet de votre ticket'
                            }
                        }) }}
                    </div>

                    <div>
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.description, {
                            'attr': {
                                'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 p-3',
                                'rows': 5,
                                'placeholder': 'Décrivez votre problème en détail'
                            }
                        }) }}
                    </div>

                    <div>
                        {{ form_label(form.purchase, 'Commande associée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.purchase, {
                            'attr': {
                                'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200 focus:ring-opacity-50 p-3'
                            }
                        }) }}
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-105">
                            Créer le ticket
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}