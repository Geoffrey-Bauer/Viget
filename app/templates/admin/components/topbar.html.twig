<div class="bg-white border-b border-gray-200 fixed top-0 left-0 right-0 z-40 h-16 shadow-sm">
    <div class="flex items-center justify-between h-full px-6 sm:px-8 lg:px-10 max-w-7xl mx-auto">
        <div class="flex items-center">
            <span class="text-2xl font-bold text-gray-800">Viget</span>
        </div>

        <div class="flex-1 max-w-md mx-6">
            <div class="relative">
                <input
                        type="text"
                        id="search-input"
                        placeholder="Rechercher..."
                        class="w-full bg-gray-100 rounded-full pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
                >
                <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400">
                    <i class="fas fa-search"></i>
                </div>
            </div>
        </div>

        <div class="flex items-center space-x-4">
            {% if app.user %}
                <div class="flex items-center space-x-3">
                    <div class="flex flex-col items-end">
                        <span class="text-sm font-semibold text-gray-800">
                            {{ app.user.firstname }} {{ app.user.lastname }}
                        </span>
                        <span class="text-xs text-gray-500">Administrateur</span>
                    </div>
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <span class="text-blue-600 font-bold uppercase">
                            {{ app.user.firstname|first }}{{ app.user.lastname|first }}
                        </span>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>